# Whale Wallet Environment Configuration
# Copy this to .env and fill in actual values

# === Core Configuration ===
WHALE_ENV=development
WHALE_LOG_LEVEL=DEBUG
WHALE_API_PORT=8080
WHALE_API_HOST=0.0.0.0
WHALE_DEBUG=true

# === Database ===
WHALE_DB_HOST=localhost
WHALE_DB_PORT=5432
WHALE_DB_NAME=whale_wallet
WHALE_DB_USER=whale_api
WHALE_DB_PASSWORD=your-secure-password-here

# === Redis ===
WHALE_REDIS_HOST=localhost
WHALE_REDIS_PORT=6379
WHALE_REDIS_DB=0

# === MPC Configuration ===
WHALE_MPC_NODE_ID=local-dev
WHALE_MPC_THRESHOLD=2
WHALE_MPC_PARTIES=3
WHALE_TEE_ATTESTATION_URL=http://localhost:8081/attest

# === AI Layer ===
WHALE_LLM_PROVIDER=anthropic
WHALE_LLM_MODEL=claude-sonnet-4-20250514
WHALE_LLM_API_KEY=your-anthropic-api-key

# Optional: OpenAI fallback
# WHALE_OPENAI_API_KEY=your-openai-api-key

# === Vector Database ===
WHALE_VECTOR_DB_PROVIDER=pinecone
WHALE_PINECONE_API_KEY=your-pinecone-api-key
WHALE_PINECONE_ENVIRONMENT=us-east-1
WHALE_PINECONE_INDEX=whale-memory

# === External APIs ===
# Transaction simulation
WHALE_BLOWFISH_API_KEY=your-blowfish-api-key
WHALE_ALCHEMY_API_KEY=your-alchemy-api-key

# === Multi-Chain RPC Endpoints ===
# EVM Chains
WHALE_ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/${WHALE_ALCHEMY_API_KEY}
WHALE_ARBITRUM_RPC=https://arb-mainnet.g.alchemy.com/v2/${WHALE_ALCHEMY_API_KEY}
WHALE_OPTIMISM_RPC=https://opt-mainnet.g.alchemy.com/v2/${WHALE_ALCHEMY_API_KEY}
WHALE_BASE_RPC=https://base-mainnet.g.alchemy.com/v2/${WHALE_ALCHEMY_API_KEY}
WHALE_POLYGON_RPC=https://polygon-mainnet.g.alchemy.com/v2/${WHALE_ALCHEMY_API_KEY}
WHALE_BSC_RPC=https://bsc-dataseed.binance.org
WHALE_AVALANCHE_RPC=https://api.avax.network/ext/bc/C/rpc
WHALE_FANTOM_RPC=https://rpc.ftm.tools

# Bitcoin
WHALE_BITCOIN_RPC=https://btc.llamarpc.com

# Solana
WHALE_SOLANA_RPC=https://api.mainnet-beta.solana.com

# Cosmos Ecosystem
WHALE_COSMOS_RPC=https://cosmos-rpc.publicnode.com:443

# Polkadot Ecosystem
WHALE_POLKADOT_RPC=wss://rpc.polkadot.io

# Cardano
WHALE_CARDANO_RPC=https://cardano-mainnet.blockfrost.io/api/v0

# TRON
WHALE_TRON_RPC=https://api.trongrid.io

# TON
WHALE_TON_RPC=https://toncenter.com/api/v2/jsonRPC

# Near Protocol
WHALE_NEAR_RPC=https://rpc.mainnet.near.org

# Move-based Chains
WHALE_SUI_RPC=https://fullnode.mainnet.sui.io
WHALE_APTOS_RPC=https://fullnode.mainnet.aptoslabs.com/v1

# === Security ===
WHALE_JWT_SECRET=your-jwt-secret-min-32-chars
WHALE_JWT_ALGORITHM=HS256
WHALE_JWT_EXPIRY_MINUTES=60
WHALE_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# === Rate Limiting ===
WHALE_RATE_LIMIT_REQUESTS=100
WHALE_RATE_LIMIT_WINDOW_SECONDS=60

# === Feature Flags ===
WHALE_ENABLE_DURESS_MODE=true
WHALE_ENABLE_INHERITANCE=true
WHALE_ENABLE_AI_CONCIERGE=true
WHALE_ATTESTATION_ENABLED=false  # Disable in development
